@model ITLab3_groupA.Models.AddToRoleModel

@{
    ViewBag.Title = "AddToRole";
}

<h2>Add role to a user: </h2>

@using (Html.BeginForm("AddToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add</button>
    </div>
}

