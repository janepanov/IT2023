@model IEnumerable<AbsenceWebApp.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl" style="max-width:50px" />
                </td>
                <td>
                    @Html.ActionLink(@item.Name, "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @{
                                    if (User.IsInRole("Admin"))
                                    {
                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                                        @Html.ActionLink("Details", "Details", new { id = item.Id });
                                        // @*@@Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                        <button employeeId = "@item.Id" class="employeeToDelete">Delete</button>
                                    }
                                    else if (User.IsInRole("Director"))
                                    {
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id });
                                            @Html.ActionLink("Details", "Details", new { id = item.Id });
                                    }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#tabela").DataTable();
            $("#tabela .employeeToDelete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete the selected employee?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/Employees/Delete/" + button.attr("employeeId"),
                            method: "GET",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
            });
        });
    </script>
}