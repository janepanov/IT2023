@model IEnumerable<AutoServiceWebApp.Models.AutoService>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="tabela">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @{
                        if (User.IsInRole("Administrator"))
                        {
                            @Html.ActionLink("Edit | ", "Edit", new { id = item.Id })
                            @Html.ActionLink("Details | ", "Details", new { id = item.Id })
                            <button autoserviceId="@item.Id" class="serviceToDelete">Delete</button>
                        }
                        else if (User.IsInRole("User"))
                        {
                            @Html.ActionLink("Details | ", "Details", new { id = item.Id })
                        }
                    }               
                </td>
            </tr>
        }
    </tbody>

</table>


@section scripts{
    <script>
        $(document).ready(function () {
            var table = $("#tabela").DataTable();
            $("#tabela .serviceToDelete").on("click", function () {
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this service?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/AutoServices/Delete/" + button.attr("autoserviceId"),
                            method: "GET",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        });
                    }
                });
            });
        });
    </script>
}