@model MVC_AE2.Models.Movie

@{
    ViewBag.Title = "EditMovie";
}

<h2>Edit movie - @Model.Name</h2>

@using (Html.BeginForm("EditMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Rating)
        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Rating, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DownloadURL)
        @Html.TextBoxFor(m => m.DownloadURL, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ImageURL)
        @Html.TextBoxFor(m => m.ImageURL, new { @class = "form-control" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Edit</button>
}
