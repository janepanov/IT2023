@model List<MVC_AE2.Models.Movie> 

@{
    ViewBag.Title = "GetAllMovies";
}

<h2>Movies: </h2>

<ul>
    @{ 
        int i = 0;
        foreach(var m in Model)
        {
            <li>
                <h4>
                    <img src="@m.ImageURL" style="max-width: 100px;" />
                    @Html.ActionLink(m.Name, "ShowMovie", new { id = i}) |
                    @Html.ActionLink("Edit", "EditMovie", new { id = i}) | 
                    @Html.ActionLink("Delete", "DeleteMovie", new { id = i})
                </h4>
            </li>

            i++;

        }
    }
</ul>

