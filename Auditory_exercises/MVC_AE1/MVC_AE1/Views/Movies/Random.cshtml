@model MVC_AE1.Models.MovieRentals

@{
    ViewBag.Title = "Random";
}

<h2>@Model.movie.Name</h2>
<h5>Rating: @Model.movie.Rating</h5>
<img src="@Model.movie.ImageURL" />

<h3>Clients: </h3>

<ul>
    @{
        int i = 0;

        foreach (var client in Model.clients)
        {
        <li>
            <a href="ShowClient/@i">@client.Name, @client.MembershipCard</a>
            <!--<a href="ShowClient?index=@i">@client.Name, @client.MembershipCard</a>-->
        </li>
            i++;
        }
    }
</ul>